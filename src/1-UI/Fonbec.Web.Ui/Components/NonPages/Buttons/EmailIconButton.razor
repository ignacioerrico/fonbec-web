@if (!string.IsNullOrWhiteSpace(EmailAddress))
{
    <MudIconButton Href="@($"mailto:{EmailAddress}")"
                   Title="Correo electrónico"
                   Icon="@Icons.Material.Filled.Email"
                   Size="Size.Small" />
}

@code {
    [Parameter]
    public string? EmailAddress { get; set; }
}