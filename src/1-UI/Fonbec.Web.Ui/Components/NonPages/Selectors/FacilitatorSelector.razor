<LoadingIndicator Loading="!_dataLoaded" LoadingText="Cargando datos" />

<MudSelect Label="Mediador" T="int"
		   Value="SelectedFacilitatorId" ValueChanged="OnSelectedValueChanged"
		   Disabled="!_dataLoaded"
		   Required="true" RequiredError="Este es un campo obligatorio."
           Variant="Variant.Filled" AnchorOrigin="Origin.BottomLeft">
	@foreach (var facilitator in _facilitators)
	{
		<MudSelectItem T="int" Value="@facilitator.Key">@facilitator.DisplayName</MudSelectItem>
	}
</MudSelect>