<LoadingIndicator Loading="!_dataLoaded" LoadingText="Cargando datos" />

<MudSelect Label="Filial" T="int"
           Value="SelectedChapterId" ValueChanged="OnSelectedValueChanged"
           Disabled="!_dataLoaded"
           Required="true" RequiredError="Este es un campo obligatorio."
           Variant="Variant.Filled" AnchorOrigin="Origin.BottomLeft">
	@foreach (var chapter in _chapters)
	{
		<MudSelectItem T="int" Value="@chapter.Key">@chapter.DisplayName</MudSelectItem>
	}
</MudSelect>