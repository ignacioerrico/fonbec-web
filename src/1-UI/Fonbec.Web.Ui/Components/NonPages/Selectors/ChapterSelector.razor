@using Fonbec.Web.Logic.Models

<LoadingIndicator Loading="!_dataLoaded" LoadingText="Cargando datos" />

<MudSelect Label="Filial" T="SelectableModel<int>"
           Value="_selectedChapter" ValueChanged="@((SelectableModel<int> f) => OnSelectedValueChanged(f))"
           Disabled="!_dataLoaded"
           Required="true" RequiredError="Este es un campo obligatorio."
           Variant="Variant.Filled" AnchorOrigin="Origin.BottomLeft">
	@foreach (var facilitator in _chapters)
	{
		<MudSelectItem T="SelectableModel<int>" Value="@facilitator">@facilitator.DisplayName</MudSelectItem>
	}
</MudSelect>