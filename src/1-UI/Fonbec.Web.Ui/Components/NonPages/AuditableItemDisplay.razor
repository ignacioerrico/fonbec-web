@using Fonbec.Web.Logic.ExtensionMethods
@using Fonbec.Web.Ui.Components.NonPages.Buttons

<MudStack Row="true">
    <MudTooltip Delay="500" Arrow="true" Placement="Placement.Bottom" Color="Color.Dark">
        <ChildContent>
            @if (@IsActive)
	        {
		        <MudText Color="@Color">
	                <strong>@ItemName</strong>
	            </MudText>
            }
	        else
	        {
		        <MudText>
			        <em>@ItemName</em>
		        </MudText>
	        }
        </ChildContent>
        <TooltipContent>
            <MudText Align="Align.Left" Typo="Typo.body1">
                @ItemName (ID: @Id)
            </MudText>
            <MudText Align="Align.Left" Typo="Typo.body2">
                Creado por: @AuditableViewModel.CreatedBy el @AuditableViewModel.CreatedOnUtc.ToLocalizedDateTime()
            </MudText>
            @if (AuditableViewModel.LastUpdatedBy is not null && AuditableViewModel.LastUpdatedOnUtc is not null)
            {
                <MudText Align="Align.Left" Typo="Typo.body2">
                    Última actualización por: @AuditableViewModel.LastUpdatedBy el @AuditableViewModel.LastUpdatedOnUtc.Value.ToLocalizedDateTime()
                </MudText>
            }
            @if (AuditableViewModel.DisabledBy is not null && AuditableViewModel.DisabledOnUtc is not null)
            {
                <MudText Align="Align.Left" Typo="Typo.body2">
                    Desabilitado por: @AuditableViewModel.DisabledBy el @AuditableViewModel.DisabledOnUtc.Value.ToLocalizedDateTime()
                </MudText>
            }
        </TooltipContent>
    </MudTooltip>
    
    @if (!string.IsNullOrWhiteSpace(AuditableViewModel.Notes))
    {
        <MudTooltip Text="@AuditableViewModel.Notes" Placement="Placement.Top">
            <MudIconButton Icon="@Icons.Material.Filled.Info" Size="Size.Small"/>
        </MudTooltip>
    }

    <EmailIconButton EmailAddress="@Email" />
</MudStack>